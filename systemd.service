[Unit]
Description=dCloud Webex Contact Center v3 CUCM and LDAP provision REST API
After=network.target

[Service]
WorkingDirectory=/opt/dcloud/cwcc-provision-api
ExecStart=/usr/bin/node src/index
Restart=always
User=root
Group=root
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
Environment=NODE_EXTRA_CA_CERTS=certs/extra-cas.pem

[Install]
WantedBy=multi-user.target
